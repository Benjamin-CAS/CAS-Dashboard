<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#C1C6DA"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/monitoring_device_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/monitoring_device_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="7dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/monitoring_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/materialCardView2"
        app:layout_constraintEnd_toStartOf="@+id/monitoring_device_type"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/materialCardView2"
        app:layout_constraintTop_toTopOf="@+id/materialCardView2" />

    <TextView
        android:id="@+id/monitoring_device_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/monitoring_device_name"
        app:layout_constraintEnd_toStartOf="@+id/monitoring_device_df_uv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/monitoring_device_name"
        app:layout_constraintTop_toTopOf="@+id/monitoring_device_name" />

    <TextView
        android:id="@+id/monitoring_device_df_uv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/monitoring_device_type"
        app:layout_constraintEnd_toStartOf="@+id/monitoring_device_mode"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/monitoring_device_type"
        app:layout_constraintTop_toTopOf="@+id/monitoring_device_type" />

    <TextView
        android:id="@+id/monitoring_device_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/monitoring_device_df_uv"
        app:layout_constraintEnd_toStartOf="@+id/monitoring_device_fan"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/monitoring_device_df_uv"
        app:layout_constraintTop_toTopOf="@+id/monitoring_device_df_uv" />

    <TextView
        android:id="@+id/monitoring_device_fan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/monitoring_device_mode"
        app:layout_constraintEnd_toStartOf="@+id/monitoring_device_mac"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/monitoring_device_mode"
        app:layout_constraintTop_toTopOf="@+id/monitoring_device_mode" />

    <TextView
        android:id="@+id/monitoring_device_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/monitoring_device_fan"
        app:layout_constraintEnd_toStartOf="@+id/guideline10"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/monitoring_device_fan"
        app:layout_constraintTop_toTopOf="@+id/monitoring_device_fan" />

    <Button
        android:id="@+id/monitoring_device_stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#EA3323"
        android:text="Stop"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/monitoring_device_automatic_btn"
        app:layout_constraintEnd_toStartOf="@+id/monitoring_device_automatic_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/guideline10"
        app:layout_constraintTop_toTopOf="@+id/monitoring_device_automatic_btn" />

    <Button
        android:id="@+id/monitoring_device_automatic_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#5CB06D"
        android:text="Automatic"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/monitoring_device_manage_btn"
        app:layout_constraintEnd_toStartOf="@+id/monitoring_device_manage_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/monitoring_device_stop_btn"
        app:layout_constraintTop_toTopOf="@+id/monitoring_device_manage_btn" />

    <Button
        android:id="@+id/monitoring_device_manage_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#324283"
        android:text="Manage"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/monitoring_device_automatic_btn"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>